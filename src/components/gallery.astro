
---
import { Image } from "astro:assets";
import image1 from "../assets/mariposas.webp";
import image2 from "../assets/olademar.jpeg";
import image3 from "../assets/flor.jpeg";
import image4 from "../assets/infinito.jpeg";
import image5 from "../assets/triangulos.jpeg";
import image6 from "../assets/caramelos.jpeg";
// TODO: Add more images when available
---

<div id="gallery" class="container mx-auto px-4 sm:px-6">
  <h2 class="text-4xl lg:text-5xl font-bold text-center mb-8 sm:mb-16">Portfolio</h2>
  
  <!-- Mobile layout (1 column) -->
  <div class="grid grid-cols-1 gap-4 lg:hidden">
    <Image 
      src={image1} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
    <Image 
      src={image2} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
    <Image 
      src={image3} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
    <Image 
      src={image4} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
    <Image 
      src={image5} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
    <Image 
      src={image6} 
      alt="Tattoo gallery"
      class="w-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
    />
  </div>

  <!-- Desktop layout (2 columns) -->
  <div class="hidden lg:grid lg:grid-cols-2 gap-4">
    <!-- Left column - single large image -->
    <div class="h-full">
      <Image 
        src={image1} 
        alt="Tattoo gallery"
        class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
      />
    </div>
    
    <!-- Right column - 3+2 grid -->
    <div class="flex flex-col gap-4">
      <!-- Top row - 3 images -->
      <div class="grid grid-cols-3 gap-4 h-1/2">
        <Image 
          src={image2} 
          alt="Tattoo gallery"
          class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
        />
        <Image 
          src={image1} 
          alt="Tattoo gallery"
          class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
        />
        <Image 
          src={image2} 
          alt="Tattoo gallery"
          class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
        />
      </div>
      <!-- Bottom row - 2 images -->
      <div class="grid grid-cols-2 gap-4 h-1/2">
        <Image 
          src={image1} 
          alt="Tattoo gallery"
          class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
        />
        <Image 
          src={image2} 
          alt="Tattoo gallery"
          class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-xl transition-shadow"
        />
      </div>
    </div>
  </div>
</div>
