---
const planes = [
  {
    nombre: "Básico",
    precio: "500€",
    caracteristicas: [
      "2 horas de servicio",
      "Hasta 15 invitados",
      "6 diseños a elegir"
    ]
  },
  {
    nombre: "Estándar",
    precio: "700€",
    caracteristicas: [
      "3 horas de servicio",
      "Hasta 25 invitados",
      "8 diseños a elegir"
    ]
  },
  {
    nombre: "Premium",
    precio: "900€",
    caracteristicas: [
      "4 horas de servicio",
      "Hasta 35 invitados",
      "10 diseños a elegir"
    ]
  }
];
---

<div class="py-20">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-4xl lg:text-5xl font-bold text-center mb-16">Tarifas</h2>
    <div id="tarifas" class="grid md:grid-cols-3 gap-10">
      {planes.map(plan => (
        <div class="relative p-8 text-center tarifa-card">
          <div class="border-animation"></div>
          <style>
            .tarifa-card {
              background: white;
              border-radius: 0.5rem;
              overflow: hidden;
            }
            
            .border-animation {
              position: absolute;
              top: 0;
              left: 0;
              right: 0;
              bottom: 0;
              background: 
                linear-gradient(90deg, #6A1121 50%, transparent 50%) repeat-x,
                linear-gradient(90deg, #6A1121 50%, transparent 50%) repeat-x,
                linear-gradient(0deg, #6A1121 50%, transparent 50%) repeat-y,
                linear-gradient(0deg, #6A1121 50%, transparent 50%) repeat-y;
              background-size: 24px 4px, 24px 4px, 4px 24px, 4px 24px;
              background-position: 0 0, 0 100%, 0 0, 100% 0;
              animation: border-dance 4s infinite linear;
            }
            
            @keyframes border-dance {
              100% {
                background-position: 100% 0, -100% 100%, 0 -100%, 100% 100%;
              }
            }
          </style>
          <h3 class="text-2xl font-semibold mb-4">{plan.nombre}</h3>
          <p class="text-4xl font-bold mb-8">{plan.precio}</p>
          <ul class="space-y-4">
            {plan.caracteristicas.map(caracteristica => (
              <li>{caracteristica}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>